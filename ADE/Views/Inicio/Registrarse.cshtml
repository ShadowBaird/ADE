@model ADE.Models.Usuario
<!DOCTYPE html>
@{
    ViewData["Title"] = "Registro";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                       Registrate
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            <div class="form-group">
                                <input class="form-control mb-3" type="text" placeholder="Telefono" asp-for="TelUsuario" required />
                                <span asp-validation-for="TelUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="NombreUsuario" required />
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="CorreoUsuario" />
                                <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="ContraUsuario" />
                                <span asp-validation-for="ContraUsuario" class="text-danger"></span>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrate</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
