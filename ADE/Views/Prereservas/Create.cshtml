@model ADE.Models.Prereserva

@{
    ViewData["Title"] = "Separar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Separar Fecha</h1>

<hr />
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none campos">
                <label asp-for="IdSalon" class="control-label"></label>
                <select asp-for="IdSalon" class ="form-control" asp-items="ViewBag.IdSalon"></select>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group campos">
                            <label asp-for="FechaEventoPrereserva" class="control-label"></label>
                            <input id="fecha" type="date" asp-for="FechaEventoPrereserva" class="form-control" />
                            <span asp-validation-for="FechaEventoPrereserva" class="text-danger"></span>
                        </div>
                        <div class="form-group campos">
                            <label asp-for="CantidadPersonasPrereserva" class="control-label"></label>
                            <input asp-for="CantidadPersonasPrereserva" class="form-control" />
                            <span asp-validation-for="CantidadPersonasPrereserva" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group campos">
                            <label asp-for="TipoEventoPrereserva" class="control-label"></label>
                            <input asp-for="TipoEventoPrereserva" class="form-control" />
                            <span asp-validation-for="TipoEventoPrereserva" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group botones-confirmar" style="margin-top:10px;">
                        <a class="btn btn-secondary" role="button" aria-pressed="true" asp-action="IndexUsuarios" style="margin-right:10px;">Regresar</a>
                        <input type="submit" value="Separar Fecha" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    window.onload = function () {
        var today = new Date().toISOString().split('T')[0];
        document.getElementById("fecha").setAttribute('min', today);
    }

</script> 