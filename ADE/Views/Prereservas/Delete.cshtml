@model ADE.Models.Prereserva

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Borrar fecha separada</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEventoPrereserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEventoPrereserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoPrereserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoPrereserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadPersonasPrereserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadPersonasPrereserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoEventoPrereserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoEventoPrereserva)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPrereserva" />
        @if (User.IsInRole("Usuario"))
        {
            <a class="btn btn-secondary" role="button" aria-pressed="true" asp-action="IndexUsuarios">Regresar</a>
        }
        else
        {
            <a class="btn btn-secondary" role="button" aria-pressed="true" asp-action="IndexAdmin">Regresar</a>

        }
        <input type="submit" value="Borrar" class="btn btn-danger" /> 


    </form>
</div>
